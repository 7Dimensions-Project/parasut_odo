<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_parasut_inherit" model="ir.ui.view">
        <field name="name">account.move.form.parasut.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Replace price_subtotal with price_total in invoice lines for visual gross totals -->
            <!-- Using tag-agnostic XPath to avoid tree/list mismatch in different Odoo versions -->
            <!-- Label price_unit as Net Unit Price and price_total as Gross Total -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_unit']" position="attributes">
                <attribute name="string">Birim Fiyat (Net)</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                <field name="price_total" string="Tutar (BrÃ¼t)" optional="show"/>
            </xpath>
            
            <!-- Add Parasut ID and Total to header for better visibility -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="parasut_total_visual" readonly="1" decoration-bf="1"/>
                <field name="parasut_id" readonly="1" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>
</odoo>
