<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_parasut_inherit" model="ir.ui.view">
        <field name="name">account.move.form.parasut.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Replace price_subtotal with price_total in invoice lines for visual gross totals -->
            <!-- Using tag-agnostic XPath to avoid tree/list mismatch in different Odoo versions -->
            <!-- Force display of price_total (Gross) instead of price_subtotal (Net) -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="replace">
                <field name="price_total" string="Tutar (BrÃ¼t)" widget="monetary" decoration-bf="1"/>
            </xpath>

            <!-- Rename price_unit to Birim Fiyat (Net) -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_unit']" position="attributes">
                <attribute name="string">Birim Fiyat (Net)</attribute>
            </xpath>
            
            <!-- Update header visual field -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="parasut_total_visual" string="Toplam (Vergi dahil) - P" readonly="1" decoration-danger="1" decoration-bf="1"/>
                <field name="parasut_id" readonly="1" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>
</odoo>
